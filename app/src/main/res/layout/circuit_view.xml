<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="#fff"
              android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/mainlayout">
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:elevation="10dp"
            android:clipToPadding="false"
            android:background="#fff"
            android:paddingBottom="10dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:id="@+id/electricElementlayout" android:padding="8dp" android:orientation="horizontal"
                      android:clipToPadding="false"
                      android:background="#fff"
                      android:paddingBottom="10dp"/>
    </HorizontalScrollView>
    <com.example.canvastest.CircuitView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/circuitView"
            android:background="@drawable/blue"/>
</LinearLayout>